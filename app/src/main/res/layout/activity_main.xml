<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.timen4.ronnny.appportfolio.MainActivity">

    <LinearLayout
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="My Nanodegree Apps"
            android:textColor="#2E3D49"
            android:textStyle="bold"
            android:textSize="18sp"
            />
        <Button
            android:id="@+id/btn_1"
            android:background="@drawable/button_selector"
            android:textColor="@android:color/white"
            android:textSize="15sp"
            android:text="POPULAR MOVIES"
            android:layout_width="210dp"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            />
        <Button
            android:id="@+id/btn_2"
            android:background="@drawable/button_selector"
            android:textColor="@android:color/white"
            android:textSize="15sp"
            android:text="STOCK HAWK"
            android:layout_width="210dp"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            />
        <Button
            android:id="@+id/btn_3"
            android:background="@drawable/button_selector"
            android:textColor="@android:color/white"
            android:textSize="15sp"
            android:text="BUILD IT BIGGER"
            android:layout_width="210dp"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            />
        <Button
            android:id="@+id/btn_4"
            android:background="@drawable/button_selector"
            android:textColor="@android:color/white"
            android:textSize="15sp"
            android:text="MAKE YOUR APP MARTERIAL"
            android:layout_width="210dp"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            />
        <Button
            android:id="@+id/btn_5"
            android:background="@drawable/button_selector"
            android:textColor="@android:color/white"
            android:textSize="15sp"
            android:text="GO UBIQUITOUS"
            android:layout_width="210dp"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            />

        <Button
            android:id="@+id/btn_6"
            android:background="@drawable/button_selector"
            android:textColor="@android:color/white"
            android:textSize="15sp"
            android:text="CAPSTONE"
            android:layout_width="210dp"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            />
    </LinearLayout>
</RelativeLayout>
